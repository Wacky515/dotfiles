{
"rules": {
    // 技術文書向けの textlint ルールプリセット
    "preset-ja-technical-writing": {
    // 1文の長さ
    "sentence-length": {
        max: 90
    },
    // 1文中のカンマ
    "max-comma": {
        max: 3
    },
    // 1文中の読点
    "max-ten": {
        max: 3
    },
    // 連続できる最大の漢字長: 固有名詞は allow オプションに記述して回避できる
    "max-kanji-continuous-len": {
        max: 5
    },
    // 「ですます調」、「である調」を統一する
    "no-mix-dearu-desumasu": {
        // 見出しは自動
        "preferInHeader": "",
        // 本文はですます調を強制
        "preferInBody": "ですます",
        // 箇条書きはである調を強制
        "preferInList": "である",
        // 文末以外のチェックをしない
        "strict": false
    },
    // 文末の句点記号に「。」を使う
    "ja-no-mixed-period": {
        "periodMark": "。"
    },
    // 二重否定の使用禁止
    "no-double-negative-ja": true,
    // ら抜き言葉の使用禁止
    "no-dropping-the-ra": true,
    // 逆接の接続助詞「が」の連続使用禁止
    "no-doubled-conjunctive-particle-ga": true,
    // 同じ接続詞の連続使用禁止
    "no-doubled-conjunction": true,
    // 同じ助詞の連続使用禁止
    "no-doubled-joshi": {
        "min_interval": 1
    },
    // UTF8-MAC 濁点の使用禁止
    "no-nfd": true,
    // 感嘆符「!！?？」の使用禁止しない
    "no-exclamation-question-mark": false,
    // 半角カナの使用禁止
    "no-hankaku-kana": true,
    // 弱い日本語表現の使用禁止
    "ja-no-weak-phrase": true,
    // 同一の単語を間違えて連続しているか検知
    "ja-no-successive-word": true,
    // よくある日本語の誤用を検知
    "ja-no-abusage": true
    },
    // 日本語周りにおけるスペースの有無を決定する textlint ルールプリセット
    "preset-ja-spacing": {
    // カタカナ語間は中黒または半角スペースを用いて区切る
    "ja-nakaguro-or-halfwidth-space-between-katakana": true,
    // かっこの外内側にスペースを入れない
    "ja-no-space-around-parentheses": true,
    // 全角文字どうしの間にスペースを入れない
    "ja-no-space-between-full-width": true,
    // 半角文字と全角文字の間にスペースを入れない
    "ja-space-between-half-and-full-width": {
        "space": "never"
    },
    // 文末に感嘆符を使用し、後に別の文が続く場合は、直後に全角スペースを挿入
    "ja-space-after-exclamation": true,
    // 文末に疑問符を使用し、後に別の文が続く場合は、直後に全角スペースを挿入
    "ja-space-after-question": true,
    // インラインコードの前後が日本語である場合に半角スペースを入れない
    "ja-space-around-code": false
    },
    // FIXME: ERRORの為、一旦KILL
    // サ抜き、サ入れ表現の誤用を検知
    // "@textlint-ja/textlint-rule-no-insert-dropping-sa": true,
    // FIXME: ERRORの為、一旦KILL
    // 漢字よりもひらがなで表記したほうが読みやすい副詞を指摘
    // "ja-hiragana-fukushi": true,
    // FIXME: ERRORの為、一旦KILL
    // 漢字よりひらがなで表記したほうが読みやすい補助動詞を指摘
    // "ja-hiragana-hojodoushi": true,
    // FIXME: ERRORの為、一旦KILL
    // 冗長な表現を禁止
    // "ja-no-redundant-expression": true,
    // FIXME: ERRORの為、一旦KILL
    // 不自然なアルファベットを検知
    // "ja-unnatural-alphabet": true,
    // FIXME: ERRORの為、一旦KILL
    // 常用漢字使用を強制
    // "joyo-kanji": true,
    // FIXME: ERRORの為、一旦KILL
    // 連用中止法を検知
    // "no-renyo-chushi": true,
    // FIXME: ERRORの為、一旦KILL
    // 全角文字と半角英字の間に半角スペース、ただし次の全角文字 [、。「 」（）｛｝【】『』] の前後には不要
    // "one-white-space-between-zenkaku-and-hankaku-eiji": true
}
}
