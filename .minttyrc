# .minttyrc

# Back ground color
# TODO: OSによる条件分岐
# Win10
Transparency=high
# Win7
# Transparency=glass
ForegroundColour=255,255,255
BackgroundColour=0,0,0
OpaqueWhenFocused=no

# # Amber
# Transparency=high
# ForegroundColour=255,127,0
# BackgroundColour=31,0,0

# # Grenn
# Transparency=high
# ForegroundColour=0,233,31
# BackgroundColour=0,31,0

# # Blue
# Transparency=high
