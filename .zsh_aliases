alias la="ls -la"
# alias ll="ls -l"
alias fn="find ./ -name"

alias ..='cd ../'
alias ...='cd ../..'
alias ....='cd ../../..'

# "sudo" の後のコマンドでエイリアスを有効にする
alias sudo="sudo "

# 色付き "ls"
autoload -U compinit
compinit
export CLICOLOR=1
export LSCOLORS=exfxcxdxbxegedabagacad
export LS_COLORS="di=34:ln=35:so=32:pi=33:ex=31:bd=46;
                \ 34:cd=43; 
                \ 34:su=41;
                \ 30:sg=46;
                \ 30:tw=42;
                \ 30:ow=43;
                \ 30"

alias gls="gls --color"

zstyle ":completion:*" list-colors
                \ "di=34"
                \ "ln=35"
                \ "so=32"
                \ "ex=31"
                \ "bd=46;34"
                \ "cd=43;34"

