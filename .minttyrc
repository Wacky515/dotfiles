# BackgroundColour=0,31,0

BoldAsFont=-1
Font=MeiryoKe_Console
FontHeight=10
# Font=Ricty Diminished
# Font=Cica  # 汚い
# FontHeight=12

Columns=65
Rows=37
CursorType=block
Scrollbar=none

Locale=ja_JP
Charset=UTF-8

CopyOnSelect=yes
BackspaceSendsBS=yes
DeleteSendsDEL=yes
RightClickAction=paste
MiddleClickAction=enter
IMECursorColour=255,0,0

Language=@
Term=xterm-256color
BellTaskbar=no
FontWeight=400
